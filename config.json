{
  "vhosts_dirs": ["/etc/apache2/sites-enabled"],
  "onPacking": "tar -C $backupdir -cf $filename $files",
  "onPackingErrorExitCode": 2, 
  "custom_sites": [{
    "dir": "/var/www/site2",
    "name": "flowershop",
    "db": {
      "type": "CustomMysql",
      "name": "testdb",
      "username": "testuser",
      "password": "testpass"
    },
    "onFinish": "echo $files"
  }, {
    "dir": "/var/www/site3",
    "db": {
      "command": "mysqldump --opt --username='testuser' --password='testpass' > backups/site3.sql",
      "command_files": ["backups/site3.sql"]
    },
    "onFinish": "echo $files"
  }],
  "onFinish": "echo $files",
  "local_backup_dir": "backups",
  "rotation": {
    "hours": 1,
    "days": 0,
    "months": 0
  }
}